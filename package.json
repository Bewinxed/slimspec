{
  "name": "slimspec",
  "author": {
    "email": "bewinxed@gmail.com",
    "name": "Omar Al Matar (Bewinxed)",
    "url": "https://bewinxed.com"
  },
  "license": "MIT",
  "description": "Zero-Shot (de)compression of API specs into token-efficient representations",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",

  "bin": {
    "slimspec": "dist/index.js"
  },
  "scripts": {
    "test": "bunx promptfoo eval -c promptfoo.compression.yaml && bunx promptfoo eval -c promptfoo.decompression.yaml",
    "evaluate": "promptfoo eval -c promptfoo.yaml",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts"
  },
  "keywords": [
    "api",
    "specification",
    "compression",
    "llm",
    "raml",
    "openapi"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "figlet": "^1.8.0",
    "gradient-string": "^3.0.0",
    "kleur": "^4.1.5",
    "nanospinner": "^1.2.2",
    "promptfoo": "^0.105.0",
    "raml2obj": "^6.8.1",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "bun-types": "latest",
    "@types/bun": "latest",
    "@types/figlet": "^1.5.8",
    "@types/glob": "^8.1.0",
    "@types/gradient-string": "^1.1.5",
    "@types/ini": "^1.3.34"
  }
}